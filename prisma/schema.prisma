// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shop {
  id        String    @id @default(uuid())
  userId    String
  shopName  String
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Category {
  id           String    @id @default(uuid())
  userId       String
  categoryName String
  deletedAt    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model PriceRecord {
  id         String   @id @default(uuid())
  userId     String
  itemName   String
  price      Int
  unit       String?
  memo       String?
  categoryId String?
  shopId     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
